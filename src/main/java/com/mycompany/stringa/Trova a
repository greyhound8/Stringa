 public class TrovareA {
    
    private int conta = 0;
    
    private String utente;
    //crea costruttutore che ha come parametro 
        public class TrovaA (scrittura) {
            //assegna al metodo chiamato scrittura il parametro di get scrittura
            this.scrittura = scrittura.getScrittura;
         }
        
        //crea la classe TrovaA
    public void TrovaA(){
        //Questo for vede ogni carattere della parementro nella variabile 
        for(int i = 0; i < scrittura.length(); i++){
            if (Scrittura.charAt(i) == 'a'){
                conta = conta + 1;
            }
        }
        
    }
    
    public void stampaA(){
        System.out.println("La parola dell'utente contiene \"" + conta + "\" volte la lettera 'a'");
        System.out.print("\n");
        for(int i = 0; i < conta; i++){
            System.out.print("A");
        }
        System.out.println(" ");
    }
     
}
